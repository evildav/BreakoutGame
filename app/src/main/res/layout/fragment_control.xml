<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:text="00:00"
        android:id="@+id/timer"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Vadivel"
        android:layout_toRightOf="@id/timer"
        android:id="@+id/displayUserName"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/displayUserName"
        android:text="Score:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblScore" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toRightOf="@id/lblScore"
        android:text="0"
        android:id="@+id/scoreText" />

    <TextView
        android:id="@+id/lblBallSpeed"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:text="Ball speed:"
        android:layout_below="@id/timer"
        android:paddingLeft="55px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <SeekBar
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/ballSpeedController"
        android:layout_toRightOf="@id/lblBallSpeed"
        android:layout_below="@+id/timer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/btnStart"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:text="Start"
        android:layout_below="@+id/lblBallSpeed"
        android:layout_toLeftOf="@+id/btnViewHighScore"
        android:layout_toStartOf="@+id/btnViewHighScore" />

    <Button
        android:id="@+id/btnViewHighScore"
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:text="View High Scores"
        android:layout_alignTop="@+id/btnStart"
        android:layout_below="@+id/lblBallSpeed"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
